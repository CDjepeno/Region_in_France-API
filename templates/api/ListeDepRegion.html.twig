{% extends "base.html.twig" %}

{% block title %}Liste des départements par région!{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="my-5">Liste des départements par regions</h1>
        <form action="" method="GET">
            <div class="row">
                <div class="col-md-10">
                    <div class="form-group">
                        <select class="form-control" name="region" id="region">
                            <option value="Toutes">Toutes les régions</option>
                            {% for region in mesRegions %}
                                <option value="{{region.code}}" {% if app.request.query.get("region") == region.code  %}selected{% endif %}>
                                    {{region.nom}}
                                </option>
                            {% endfor %}
                        </select>
                    </div>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary">Rechercher</button>
                </div>

            </div>

        </form>
        
        <div class="row">
            {% for Dep in mesDeps %}
                <div class="col-md-3">
                    <div class="card text-white bg-primary mb-3" style="max-width: 20rem;">
                        <div class="card-header">{{Dep.code}}</div>
                        <div class="card-body">
                            <h4 class="card-title">{{Dep.nom}}</h4>
                        </div>
                    </div>
                </div>
            {% endfor %}
                
        </div>

    </div>
{% endblock %}