{% extends 'base.html.twig' %}

{% block title %}Hello ApiController!{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="my-5">Liste des regions</h1>
        <div class="row">
            {% for region in mesRegions %}
                <div class="col-md-3">
                    <div class="card text-white bg-primary mb-3" style="max-width: 20rem;">
                        <div class="card-header">{{region.nom}}</div>
                        <div class="card-body">
                            <h4 class="card-title">{{region.code}}</h4>
                        </div>
                    </div>
                </div>
            {% endfor %}
                
        </div>

    </div>
{% endblock %}
